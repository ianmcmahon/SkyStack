{
  "builders": [{
    "name": "openfiler-base",
    "vm_name": "openfiler-base",
    "type": "vmware-iso",
    "guest_os_type": "rhel5-64",
    "tools_upload_flavor": "linux",
    "headless": true,

    "iso_url": "https://phoenixnap.dl.sourceforge.net/project/openfiler/openfiler-distribution-iso-2.99-x64/openfileresa-2.99.1-x86_64-disc1.iso",
    "iso_checksum": "be3be005c9f0a6025731ab8c036dfb0188b0d9c2",
    "iso_checksum_type": "sha1",

    "ssh_username": "root",
    "ssh_password": "root",
    "ssh_timeout": "30m",

    "disk_type_id": "thin",
    "disk_size": 16384,

    "floppy_files": [
      "floppy/ks.cfg"
    ],

    "boot_command": [
      "<esc><wait>",
      "vmlinuz initrd=initrd.img net.ifnames=0 biosdevname=0 ",
      "ks=floppy",
      "<enter>"
    ],

    "shutdown_command": "shutdown -Ph now",

    "remote_type": "esx5",
    "remote_host": "{{user `esxi_host`}}",
    "remote_datastore": "{{user `esxi_datastore`}}",
    "remote_username": "{{user `esxi_username`}}",
    "remote_password": "{{user `esxi_password`}}",
    "keep_registered": true,
    "vnc_disable_password": true,

    "vmx_data": {
      "ethernet0.networkName": "VM Network"
    }
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
        "sleep 1",
        "mount /dev/cdrom /mnt/cdrom",
        "tar xvfz /mnt/cdrom/VMwareTools-10.2.0-7253323.tar.gz -C /tmp/",
        "/tmp/vmware-tools-distrib/vmware-install.pl --default"
    ]
  }]
}
